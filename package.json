{
  "name": "dark-icon-generator",
  "version": "1.1.0",
  "description": "Generate dark mode icons from light mode icons for various platforms.",
  "main": "lib/index.js",
  "module": "lib/esm/index.js",
  "browser": "lib/esm/browser.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "require": "./lib/index.js",
      "import": "./lib/esm/index.js",
      "browser": "./lib/esm/browser.js",
      "default": "./lib/index.js"
    },
    "./browser": {
      "types": "./lib/browser.d.ts",
      "require": "./lib/browser.js",
      "import": "./lib/esm/browser.js"
    }
  },
  "scripts": {
    "build": "pnpm build:cjs && pnpm build:esm",
    "build:cjs": "tsc -p tsconfig.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "demo:prepare": "pnpm build && node scripts/prepare-browser-demo.js",
    "demo:start": "pnpm run demo:prepare && npx http-server examples/browser",
    "test": "jest --config jestconfig.json",
    "lint": "eslint .",
    "prepare": "pnpm run build",
    "prepublishOnly": "pnpm run test && pnpm run lint",
    "preversion": "pnpm run lint",
    "version": "pnpm run lint && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "dark mode",
    "icons",
    "icon generator",
    "dark icons"
  ],
  "author": "agoudbg <agoudbg@gmail.com>",
  "homepage": "https://github.com/agoudbg/Dark-Icon-Generator",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.9",
    "eslint": "^9.13.0",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.58"
  }
}